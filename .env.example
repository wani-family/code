# Daum Mail IMAP Settings
IMAP_HOST=imap.daum.net
IMAP_PORT=993
IMAP_USER=your-email@daum.net
IMAP_PASSWORD=your-password
IMAP_TLS=true

# Email Filtering
# Only emails from this sender will be processed
TARGET_SENDER=sender@example.com

# Optional: Filter links by pattern (e.g., for Netflix temporary access code)
# If set, only links containing this pattern will be extracted
LINK_PATTERN=account/travel/verify

# Telegram Bot Settings
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Your chat ID (can get from @userinfobot)
TELEGRAM_CHAT_ID=123456789

# Browser Settings
# Set to false for first run to manually login, then can set to true
BROWSER_HEADLESS=false
SESSION_DIR=./sessions

# Application Settings
LOG_LEVEL=info
TEMP_DIR=./temp
LOGS_DIR=./logs

# Optional: Mark emails as read after processing
MARK_AS_READ=true

# Optional: Which mailbox to monitor
MAILBOX=INBOX
